{% trans_default_domain 'FOSUserBundle' %}
<head>
    <link href="{{ asset('bundles/main/BackEnd/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/main/BackEnd/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/main/BackEnd/assets/font-awesome/css/font-awesome.css') }}" rel="stylesheet"/>


    <style>
        .BAC {
            width: 100%;
        }
    </style>
    <style>
        .white-color {
            color: white;
            margin-left: 3px;
        }

        #ABCD {
            text-align: left;
            font-style: normal;
            padding: 10px;
            background: rgba(80, 86, 82, 0.65);
            font-size: 16px;
            font-weight: 500;
        }

        .margin-30 {
            margin: 30px;
        }
    </style>
</head>


<section id="reservation" class="reservation_section bg-grey ">
    <div class="container col-lg-offset-1 col-lg-10">
        <section class="wrapper">
            <!-- page start-->
            <div class="row margin-30">

                <section class="panel">
                    <div class="panel-body bio-graph-info">
                        <div class="row">
                            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-user"></i> Pseudo</strong></span>:  {{ form_widget(form.username) }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong>E-Mail</strong></span>: {{ form_widget(form.email) }}</p>
                            </div>

                            <div class="bio-row BAC">
                                <p><span><strong>Nom</strong></span>: {{ form_widget(form.nom) }}</p>
                            </div>

                            <div class="bio-row BAC">
                                <p><span><strong>Ville</strong></span>: {{ form_widget(form.ville) }}</p>
                            </div>

                            <div class="bio-row BAC">
                                <p><span><strong>Numéro de téléphone</strong></span>: {{ form_widget(form.phone) }}</p>
                            </div>

                            <div class="bio-row BAC">
                                <p><span><strong>URL</strong></span>: {{ form_widget(form.URL) }}</p>
                            </div>

                            <div class="bio-row BAC">
                                <p><span><strong>Introduction</strong></span>: {{ form_widget(form.intro) }}</p>
                            </div>


                            <div class="bio-row BAC">
                                <p><span><strong>Date de naissance</strong></span>: {{ form_widget(form.datedenaissance) }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong>Tapez votre mot de passe</strong></span>: {{ form_widget(form.current_password) }}</p>
                            </div>

                            <div class="bio-row BAC">
                                <input type="submit"  class="btn btn-shadow btn-success" value="{{ 'profile.edit.submit'|trans }}" />
                            </div>
                            {{ form_end(form) }}


                        </div>
                    </div>
                </section>


            </div>

            <!-- page end-->
        </section>
    </div>

</section>


