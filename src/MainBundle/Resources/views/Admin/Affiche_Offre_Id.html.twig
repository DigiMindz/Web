{% extends 'baseAdmin.html.twig' %}

{% block Afficher_Offre_ParId %}
    <section id="main-content" xmlns="http://www.w3.org/1999/html">
        <section class="wrapper">
            <!-- page start-->
            <div class="row">
                <aside class="profile-nav col-lg-3">
                    <section class="panel">
                        <div class="user-heading round">
                            <h1><strong>{{ offre.offre }}</strong></h1>
                        </div>

                    </section>
                </aside>

                <aside class="profile-info col-lg-9">
                    <section class="panel">

                        <div class="panel-body bio-graph-info">
                            <div class="row">

                                <p class="A"> <strong>Date d√©but: </strong>{{offre.dateDebut|date("m/d/Y")  }}</p><br>
                                <p class="A"> <strong>Date fin : </strong>{{offre.dateFin|date("m/d/Y")  }}</p><br>
                                {% if offre.etablissement.partenaire==1  %}
                                    <i class=""></i><strong> Code promotion: </strong>{{ offre.code_promo }}<br>
                                    <i class=""></i><strong> Pourcentage OFF: </strong>{{ offre.pourcentage }}<br>
                                {% endif %}
                                <a href="{{ path('delete_offre_admin',{'id':offre.id}) }}" class="btn btn-danger"><i class="fa fa-times"></i> Supprimer </a>

                            </div>
                        </div>
                    </section>
                </aside>
            </div>
            <!-- page end-->
        </section>
    </section>

{% endblock %}

