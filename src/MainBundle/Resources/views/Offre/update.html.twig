{% extends 'Base.html.twig' %}
{% block UpdateOffre %}
    <section id="reservation" class="reservation_section bg-grey">
        <div class="container padding">
            <div class="col-sm-10 col-sm-offset-1 align-left">
                <div class="reserv_form">
                    <div class="section_heading mb-40">
                        <h2>Modifier votre offre</h2>
                        <br>
                        {{ form_start(form) }}
                        {{ form_row(form.offre,{'label':'Nom'}) }}<br>
                        {{ form_row(form.dateDebut,{'label':'Date d√©but'}) }}<br>
                        {{ form_row(form.dateFin,{'label':'Date fin'}) }}<br>
                        {{ form_row(form.description) }}<br>
                        {{ form_row(form.Ajouter,{'label':'Modifier'}) }}<br>
                        {% if etab.partenaire==0  %}
                            {{ form_widget(form.code_promo, { 'attr': {'class': 'hidden-row'} }) }}
                            {{ form_widget(form.pourcentage, { 'attr': {'class': 'hidden-row'} }) }}
                        {% else %}
                                    {{ form_row(form.code_promo) }}
                                    {{ form_row(form.pourcentage) }}
                        {% endif %}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}