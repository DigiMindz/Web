{% extends "MainBundle::layout.html.twig" %}
{% block wishesUser %}


    <head>
        <link href="{{ asset('bundles/main/BackEnd/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/main/BackEnd/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/main/BackEnd/assets/font-awesome/css/font-awesome.css') }}" rel="stylesheet"/>


        <style>
            .BAC {
                width: 100%;
            }
        </style>
        <style>
            .white-color {
                color: white;
                margin-left: 3px;
            }

            #ABCD {
                text-align: left;
                font-style: normal;
                padding: 10px;
                background: rgba(80, 86, 82, 0.65);
                font-size: 16px;
                font-weight: 500;
            }

            .margin-30 {
                margin: 30px;
            }
        </style>
    </head>

    <section id="reservation" class="reservation_section bg-grey ">
        <div class="container col-lg-offset-1 col-lg-10">
            <section class="wrapper">
                <!-- page start-->
                <div class="row margin-30">
                    <aside class="profile-info col-lg-offset col-lg-12">
                        <div class="row margin-30">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">
                                <button style="margin-top: 10px" type="button" class="btn btn-default ">
                                    <a href="{{ path('fos_user_profile_show') }}" class="">
                                        <i class="fa fa-user"></i>Page
                                    </a>
                                </button>
                                <button  style="margin-top: 10px" class="btn btn-default">
                                    <a href="{{ path('show_responsable') }}" class=""><i class="fa fa-thumb-tack"></i>  Mes établissements </a>
                                </button>
                                <button style="margin-top: 10px" class="btn btn-default "><a href="{{ path('affiche_visited') }}" class="">
                                        <i class="fa fa-thumb-tack"></i>Visités </a>
                                </button>

                                <button style="margin-top: 10px" class="btn btn-default">
                                    <a href="{{ path('affiche_wish') }}" class="">
                                        <i class="fa fa-thumb-tack"></i> Mes Favoris
                                    </a>
                                </button>
                                <button style="margin-top: 10px" class="btn btn-default"><a href="{{ path('affiche_going') }}" class="">
                                        <i class="fa fa-thumb-tack"></i> Going Events </a>
                                </button>
                                <button style="margin-top: 10px" class="btn btn-default">
                                    <a href="{{ path('affiche_interest') }}" class=""><i class="fa fa-thumb-tack"></i> Interesting Events </a>
                                </button>
                                <button style="margin-top: 10px" class="btn btn-default ">
                                    <a href="{{ path('main_bundle_afficher_demande') }}"><i class="fa fa-calendar"></i> Mes Demandes </a>
                                </button>
                                <button style="margin-top: 10px" class="btn btn-default">
                                    <a href="{{ path('main_bundle_mes_reclamations') }}"><i class="fa fa-archive"></i> Mes Reclamations </a>
                                    </button>

                                <button style="margin-top: 10px" class="btn btn-default active">
                                    <a href="{{ path('affiche_demande_partenariat') }}"><i class="fa fa-archive"></i> Demande partenariat </a>
                                </button>
                            </div>
                        </div>
                        <section class="panel">
                            <div class="panel-body bio-graph-info">
                                <div class="row">
                                    {% if demandes is empty  %}
                                    <p>Pas de demandes de partenariat</p>
                                        <button style="margin-top: 10px" class="btn btn-shadow btn-success">
                                            <a href="{{ path('show_responsable') }}"><i class="fa fa-archive"></i> Envoyer une demande </a>
                                        </button>
                                    {% else %}
                                    {% for etablissements in demandes %}
                                        <div class="col-md-6 col-sm-6">
                                            <div class="panel">
                                                <div class="panel-body">
                                                    <div class="media">
                                                        <div class="media-body">
                                                            <h4>{{ etablissements.favoris.nom}}</h4>

                                                            <address>
                                                                <strong><p class="A">{{etablissements.description  }}</p></strong>
                                                                <strong><p class="A"><a href="{{ path('annuler_demande_partenariat',{'id':etablissements.id} ) }}">Annuler
                                                                            la Demande</a></p></strong>
                                                            </address>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                        {% endif %}

                                </div>
                            </div>
                        </section>

                    </aside>

                </div>

                <!-- page end-->
            </section>
        </div>

    </section>
{% endblock %}